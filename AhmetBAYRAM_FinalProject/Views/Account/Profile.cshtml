@using AhmetBAYRAM_FinalProject.Entities;
@model Users

@{
    ViewData["Title"] = "Profile";
}

<style>
    .profile-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
        position:relative
    }

    .profile-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .profile-info {
        margin-bottom: 10px;
    }

    .profile-label {
        font-weight: bold;
    }

    .profile-value {
        margin-left: 10px;
    }

    .profile-info.text-right {
        position: absolute;
        bottom: 0;
        right: 0;
    }

    .btn-primary {
        margin: 5px 8px;
        background-color: #4a90e2;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
    }

    .btn-primary:hover {
            background-color: #356dbf;
        }

</style>

<div class="profile-container">
    <h2 class="profile-title">Profile</h2>

    <div class="profile-info">
        <span class="profile-label">Username:</span>
        <span class="profile-value">@Model.Username</span>
    </div>

    <div class="profile-info">
        <span class="profile-label">Id:</span>
        <span class="profile-value">@Model.Id</span>
    </div>

    <div class="profile-info">
        <span class="profile-label">Full Name:</span>
        <span class="profile-value">@Model.Name</span>
    </div>

    <div class="profile-info">
        <span class="profile-label">Locked:</span>
        <span class="profile-value">@Model.Locked</span>
    </div>

    <div class="profile-info">
        <span class="profile-label">Role:</span>
        <span class="profile-value">@Model.Role</span>
    </div>

    <div class="profile-info">
        <span class="profile-label">Created At:</span>
        <span class="profile-value">@Model.CreatedAt</span>
    </div>
    <span>&nbsp;</span>
    <div class="profile-info text-right">
        <a asp-controller="Account" asp-action="Update" class="btn btn-primary">Update Password</a>
    </div>
    
</div>
