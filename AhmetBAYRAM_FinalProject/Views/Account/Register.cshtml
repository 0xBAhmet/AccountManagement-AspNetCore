@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

    .register-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .text-danger {
        color: red;
        font-size: 12px;
    }

    .register-button {
        margin-top: 20px;
        text-align: center;
    }

    .password-toggle {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

        .password-toggle .toggle-icon {
            position: absolute;
            top: 50%;
            right: 5px;
            transform: translateY(-50%);
            color: #999;
            cursor: pointer;
        }
</style>


<div class="register-container">
    <div class="register-title">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <div class="input-group">
                <input id="passwordInput" asp-for="Password" class="form-control" placeholder="Your Password" type="password" />
            </div>
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="RePassword" class="form-label">Confirm Password</label>
            <div class="input-group">
                <input id="repasswordInput" asp-for="RePassword" class="form-control" placeholder="Confirm Password" type="password" />
                
            </div>
            <span asp-validation-for="RePassword" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Your Name</label>
            <input asp-for="Name" class="form-control" placeholder="Your Name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="register-button">
            <button class="btn btn-primary" type="submit">Register</button>
        </div>
    </form>
</div>

