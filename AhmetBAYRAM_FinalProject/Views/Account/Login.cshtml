@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">UserName</label>
                <input asp-for="Username" class="form-control" placeholder="UserName" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">PassWord</label>
                <input asp-for="Password" class="form-control" placeholder="Your Pass" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3" >
                <button class="btn btn-primary d-block" type="submit">Login</button>
            </div>

        </form>
    </div>
</div>